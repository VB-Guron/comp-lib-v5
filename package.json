{
  "name": "comp-lib-v5",
  "version": "1.0.0",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    },
    "./styles.css": "./dist/styles.css"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "npm run build:js && npm run build:styles",
    "build:js": "tsup",
    "build:styles": "npm run build:scss && npm run build:tailwind && npm run combine:styles",
    "build:scss": "sass src/styles/components.scss dist/components.css --style=compressed",
    "build:tailwind": "tailwindcss -i ./src/styles/globals.css -o ./dist/tailwind.css --minify",
    "combine:styles": "cat dist/tailwind.css dist/components.css > dist/styles.css && rm dist/tailwind.css dist/components.css",
    "dev": "npm run build:styles && cd playground && npm run dev",
    "playground:install": "cd playground && npm install"
  },
  "peerDependencies": {
    "react": ">=16.8.0",
    "react-dom": ">=16.8.0"
  },
  "devDependencies": {
    "@types/react": "^18.0.0",
    "@types/react-dom": "^18.0.0",
    "autoprefixer": "^10.4.0",
    "postcss": "^8.4.0",
    "postcss-scss": "^4.0.0",
    "sass": "^1.70.0",
    "tailwindcss": "^3.4.0",
    "tsup": "^8.0.0",
    "typescript": "^5.0.0"
  },
  "dependencies": {
    "class-variance-authority": "^0.7.0",
    "clsx": "^2.0.0",
    "lucide-react": "^0.400.0",
    "react": "^18.0.0",
    "react-dom": "^18.0.0",
    "tailwind-merge": "^2.0.0"
  }
}
